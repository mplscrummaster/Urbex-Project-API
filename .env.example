# Environment configuration example
# Copy this file to .env and adjust values for your environment.

NODE_ENV=development
PORT=3000

# Path to the SQLite database file
DB_PATH=db/bdd.db

# Enable verbose SQL logging (true/false)
DB_VERBOSE=false

# Strong secret for signing JWT tokens (REQUIRED in production)
# Generate something like: openssl rand -hex 32
JWT_SECRET=change-me-in-production

# Bcrypt cost factor (higher => slower hashing)
BCRYPT_SALT_ROUNDS=10
